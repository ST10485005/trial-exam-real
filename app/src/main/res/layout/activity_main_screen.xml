<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aura"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <Button
        android:id="@+id/btnAddEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:text="Add Entry"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:background="@color/aura"
        android:textColor="@color/black"
        android:layout_height="73dp"
        android:layout_margin="3dp"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="Date"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:background="@color/aura"
        android:textColor="@color/black"
        android:layout_height="67dp"
        android:layout_margin="3dp"
        android:ems="10"
        android:hint="number of minutes played"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonGenre1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:text="Puzzle"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonGenre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:padding="10dp"
        android:text="Platformer"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonGenre3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:text="Strategy"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonRaiting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:padding="10dp"
        android:text="1"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonRaiting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/aura"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:text="2"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonRaiting3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:text="3"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonRaiting4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:text="4"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/radioButtonRaiting5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/aura"
        android:textColor="@color/black"
        android:padding="10dp"
        android:text="5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnClearInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:text="Clear"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/custombuttons"
        android:textColor="@color/black"
        android:text="Next"
        android:textSize="20sp" />

</LinearLayout>